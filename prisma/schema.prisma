generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  role Int @default(0)
}

model Session {
  userId Int
  sessionId String @unique
  expirationDate DateTime
}

model Post {
  id Int @id @default(autoincrement())
  authorId Int
  title String
  content String
  tags String
  createdAt DateTime @default(now())
}